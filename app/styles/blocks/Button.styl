@import '../variables/_colors.styl'
@import '../variables/_sizes.styl'
@import '../mixins/_rem.styl'
@import '../mixins/_media.styl'

.button
  &--clear
    padding: 0
    border: 0
    background-color: transparent
    color: inherit
    white-space: nowrap
    user-select: none

  &--full-size
    display: block
    width: 100%

  &--outline
    padding: rem(8) rem(15)
    border: rem(1) $base_color solid

    &:hover, &:focus
      background-color: $base_color
      color: #fff

  &--rounded
    border-radius: rem(500)
